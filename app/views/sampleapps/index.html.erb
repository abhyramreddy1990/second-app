<p id="notice"><%= notice %></p>

<h1>Sampleapps</h1>

<%= form_tag sampleapps_path, :method => 'get', :id => "sampleapps_search"  do %>

  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :Fname => nil %>
  </p>

<% end %>

    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
 

<div  class= "table-responsive">
<table  class= "table table-striped table-bordered table-hover table-condensed" >
  <thead>
    <tr>
      <th> <%= sortable "Fname" %></th>
      <th><%= sortable "Lname" %></th>
      <th>Gender</th>
      <th>Address</th>
      <th>Country</th>
      <th>history </th>
      <th>update</th>
      <th>delete</th>
    </tr>
  </thead>

  <tbody>
    <% @sampleapps.each do |sampleapp| %>
      <tr>
        <td><%= sampleapp.Fname %></td>
        <td><%= sampleapp.Lname %></td>
        <td><%= sampleapp.Gender %></td>
        <td><%= sampleapp.Address %></td>
        <td><%= sampleapp.Country %></td>
        <td><%= link_to 'Show', sampleapp, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_sampleapp_path(sampleapp) , :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', sampleapps_path(sampleapp),
        method: :delete,
        data: { confirm: 'Are you sure?' } ,
        :class =>'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

